<div class="movie container">
  <h1>{{model.title}}</h1>
  <h4>{{model.tagline}}</h4>
  <div class="row info">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="cover-image-wrapper">
        {{cover-image model=model size="large"}}
      </div>
      <div class="actions">
        {{#link-to 'movie.trailer' model.id classNames="btn btn-primary trailer-button" }}View trailer{{/link-to}}
      </div>
    </div>
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
      <header class="header">
        <h4>{{releaseYear}} {{formattedGenres}}</h4>
      </header>
      <section>
        <p>{{{model.overview}}}</p>
      </section>
      <section class="col-sm-12 col-md-12 col-lg-6">
        <h5>Not-so-interesting info</h5>
        <dl class="dl-horizontal">
          {{#if model.homepage}}
            <dt>Website:</dt>
            <dd><a {{bind-attr href=model.homepage}}>{{model.homepage}}</a></dd>
          {{/if}}
          {{#if director}}
            <dt>Directed by:</dt>
            <dd>{{#link-to 'person' director.id}}{{director.name}}{{/link-to}}</dd>
          {{/if}}
          <dt>Release date:</dt>
          <dd>{{model.release_date}}</dd>
          <dt>Rating:</dt>
          <dd>{{model.vote_average}}</dd>
          <dt>Budget:</dt>
          <dd>{{format-money amount=model.budget}}</dd>
          <dt>Revenue:</dt>
          <dd>{{format-money amount=model.revenue}}</dd>
        </dl>
      </section>
      <section class="col-sm-12 col-md-12 col-lg-6 cast">
        <h5>Cast</h5>
        {{#each topCast as |person|}}
          {{list-cast model=person}}
        {{/each}}
      </section>
    </div>
    {{#if model.similar}}
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h4>Similar movies</h4>
        {{#each slicedSimilar as |movie|}}
          {{list-item model=movie}}
        {{/each}}
      </div>
    {{/if}}
  </div>
  <div class="backdrop-container">
    {{backdrop-image model=model}}
  </div>
</div>
{{outlet}}
